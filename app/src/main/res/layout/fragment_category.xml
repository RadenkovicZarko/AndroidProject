<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <EditText
        android:id="@+id/inputEtCat"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="@color/eva_green"
        android:textColorHint="@color/eva_green"
        android:backgroundTint="@color/eva_green"
        android:hint="Enter Category Name"
        app:layout_goneMarginEnd="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listRvCat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputEtCat"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="16dp"
        android:clipToPadding="false"/>



</androidx.constraintlayout.widget.ConstraintLayout>