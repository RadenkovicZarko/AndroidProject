<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/personal_item_mealPV"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/meal_name_itemTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/personal_item_mealPV"
        app:layout_constraintBottom_toTopOf="@+id/meal_typeTV"
        app:layout_constraintEnd_toStartOf="@+id/editPV"
        android:layout_marginStart="16dp"
        android:text="Meal Title"
        android:textSize="20sp"
        android:textColor="@color/eva_green"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/meal_typeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:textSize="17sp"
        android:textColor="@color/eva_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/personal_item_mealPV"
        app:layout_constraintEnd_toStartOf="@+id/date_itemTV"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"/>


    <TextView
        android:id="@+id/date_itemTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14-7-2023"
        android:textSize="17sp"
        android:textColor="@color/eva_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/meal_typeTV"
        app:layout_constraintEnd_toStartOf="@id/deletePV"
        android:layout_margin="20dp"
        />

    <ImageView
        android:id="@+id/editPV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/deletePV"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/baseline_edit_24"
        />

    <ImageView
        android:id="@+id/deletePV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/editPV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_delete_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>